platform :ios, ‘8.0’
inhibit_all_warnings!

target 'iShop' do

    #网络请求库
    pod 'AFNetworking', '~> 3.1.0'
    #异步下载图片并且支持缓存
    pod 'SDWebImage', '~> 3.8.2’
    #数据库
    pod 'FMDB', '~> 2.6.2'
    #显示HUD窗口
    pod 'MBProgressHUD', '~> 0.9.1'
    #轻量级的布局框架
    pod 'Masonry', '~> 1.0.2’
    #自定义PageControl,多种样式
    pod 'StyledPageControl', '~> 1.0'
    #自定义选项卡控件
    pod 'RDVTabBarController', '~> 1.1.9'
    #下拉刷新上拉加载组件
    pod 'MJRefresh', '~> 3.1.12'
    #检测网络状态
    pod 'Reachability', '~> 3.2'
    #弹出框组件
    pod 'MMPopupView', '~> 1.7.2'
    #自动处理键盘事件
    pod 'IQKeyboardManager', '~> 4.0.8'

end
